{
    "database": {
        "type": "sqlite",
        "path": "data/visiongate.db"
    },
    "recognition": {
        "model": "data/models/lpr_model.pth",
        "confidence_threshold": 0.7,
        "processing_interval": 0.5,
        "save_images": true,
        "image_path": "data/images",
        "enabled": true,
        "use_hailo_tpu": true,
        "ocr_method": "hybrid",
        "ocr_config_path": "config/ocr_config.json"
    },
    "barrier": {
        "type": "mock",
        "enabled": false
    },
    "web": {
        "host": "0.0.0.0",
        "port": 5001,
        "debug": false,
        "secret_key": "your-very-secure-random-secret-key-here",
        "upload_folder": "uploads"
    },
    "ssl": {
        "enabled": true,
        "cert_file": "/etc/ssl/certs/visiongate.co.uk.crt",
        "key_file": "/etc/ssl/private/visiongate.co.uk.key",
        "auto_generate": false
    },
    "camera": {
        "type": "ip",
        "resolution": [1280, 720],
        "framerate": 30,
        "rotation": 0
    },
    "notifications": {
        "email": {
            "enabled": false,
            "smtp_server": "smtp.example.com",
            "smtp_port": 587,
            "use_tls": true,
            "username": "your_email@example.com",
            "password": "your_password",
            "from_address": "your_email@example.com",
            "to_addresses": ["recipient@example.com"]
        },
        "sms": {
            "enabled": false,
            "provider": "twilio",
            "account_sid": "your_twilio_account_sid",
            "auth_token": "your_twilio_auth_token",
            "from_number": "+1234567890",
            "to_numbers": ["+1234567890"]
        },
        "webhook": {
            "enabled": false,
            "url": "https://example.com/webhook",
            "method": "POST",
            "headers": {
                "Content-Type": "application/json",
                "Authorization": "Bearer your_token"
            }
        }
    },
    "logging": {
        "level": "INFO",
        "file": "data/logs/visiongate.log",
        "max_size": 10485760,
        "backup_count": 5
    },
    "security": {
        "rate_limiting": {
            "enabled": true,
            "max_requests": 100,
            "window_seconds": 60
        },
        "failed_login_delay": 3,
        "max_failed_logins": 5,
        "lockout_time": 300
    }
}
