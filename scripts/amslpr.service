[Unit]
Description=Vision-Based Access Control System Service
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/VisiGate
ExecStart=/usr/bin/python3 /home/pi/VisiGate/src/main.py
Restart=on-failure
RestartSec=5
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=visigate

[Install]
WantedBy=multi-user.target
